@model CastleWindsorTestApp.Models.Employee
@{
    Layout = null;
}
<div class="modal-header">
    <h5 style="color:darkred" class="modal-title">Are you sure you want to delete  this employee?</h5>
    <button type="button" class="close" data-dismiss="modal">&times;</button>
</div>
<div class="modal-body">
    <form action="#">
        <div class="form-group row">
            @Html.HiddenFor(model => model.EmployeeId)
            @Html.HiddenFor(model => model.DepartmentId)
            <label class="col-sm-4 col-form-label" for="name"> Name</label>
            <div class="col-sm-6">
                @Html.EditorFor(model => model.EmployeeName, new { htmlAttributes = new { @readonly = "", @class = "form-control", @id = "name" } })
            </div>
        </div>
        <div class="form-group row">

            <label class="col-sm-4 col-form-label" for="job"> Job</label>
            <div class="col-sm-6">
                @Html.EditorFor(model => model.JobName, new { htmlAttributes = new { @readonly = "", @class = "form-control", @id = "job" } })
            </div>
        </div>
        <div class="form-group row">

            <label class="col-sm-4 col-form-label" for="salary"> Salary</label>
            <div class="col-sm-6">
                @Html.EditorFor(model => model.Salary, new { htmlAttributes = new { @readonly = "", @class = "form-control", @id = "salary" } })
            </div>
        </div>
    </form>
</div>
<div class="modal-footer">
    <button data-dismiss="modal" class="btn btn-outline-dark btn-sm-3">
        <i class="fa fa-close"></i>
        Close
    </button>
    <button id="SendForm" name="Delete" class="btn btn-outline-danger btn-sm-3">
        <i class="fa fa-trash"></i>
        Delete
    </button>
</div>